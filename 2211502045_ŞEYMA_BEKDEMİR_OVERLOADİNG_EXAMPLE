


//bu benim 1. değişikliğim
//branch-1 içindeki ilk değişikliğim






public class Hesaplama {

    // Farklı veri türleri için toplama işlemi
    public static int topla(int a, int b) {
        return a + b;
    }

    public static double topla(double a, double b) {
        return a + b;
    }

    // Farklı parametre sayıları için toplama işlemi
    public static int topla(int a, int b, int c) {
        return a + b + c;
    }

    public static void main(String[] args) {
        System.out.println("İki Tamsayının Toplamı: " + topla(5, 3));
        System.out.println("İki Ondalık Sayının Toplamı: " + topla(2.5, 1.7));
        System.out.println("Üç Tamsayının Toplamı: " + topla(10, 20, 30));
    }
}
